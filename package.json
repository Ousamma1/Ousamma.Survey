{
  "name": "ousamma-survey",
  "version": "2.0.0",
  "description": "AI-Powered Survey Application with Advanced Features",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "start:survey-service": "cd services/survey-service && npm start",
    "dev:survey-service": "cd services/survey-service && npm run dev",
    "start:all": "concurrently \"npm start\" \"npm run start:survey-service\"",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:survey-service\"",
    "install:all": "npm install && cd services/survey-service && npm install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "playwright test",
    "test:performance": "k6 run tests/performance/load-test.js",
    "test:security": "npm audit && npm run test:owasp",
    "test:owasp": "node tests/security/owasp-checks.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "qrcode": "^1.5.3",
    "redis": "^4.6.7",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "ws": "^8.14.2",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^29.5.14",
    "axios": "^1.13.2",
    "concurrently": "^8.2.1",
    "faker": "^5.5.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
