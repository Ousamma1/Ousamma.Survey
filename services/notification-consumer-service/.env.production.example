# Notification Consumer Service Production Configuration

NODE_ENV=production
PORT=3004
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://admin:password@mongodb:27017/notifications
MONGODB_DB_NAME=notifications

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=notification-consumer
KAFKA_GROUP_ID=notification-consumer-group

# Providers
EMAIL_PROVIDER=smtp
SMS_PROVIDER=twilio
PUSH_PROVIDER=fcm

# Email Configuration
EMAIL_FROM=noreply@survey-platform.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=

# SMS Configuration
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Configuration
FCM_SERVER_KEY=
FCM_SENDER_ID=

# WebSocket
WEBSOCKET_URL=http://websocket-service:3002

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000
