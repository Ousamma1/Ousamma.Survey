{
  "name": "mr-daisy-2.0",
  "version": "1.0.0",
  "description": "Mr. Daisy 2.0 - Microservices Architecture Survey Platform",
  "private": true,
  "scripts": {
    "start": "docker-compose up",
    "start:prod": "docker-compose -f docker-compose.prod.yml up",
    "stop": "docker-compose down",
    "stop:prod": "docker-compose -f docker-compose.prod.yml down",
    "build": "docker-compose build",
    "build:prod": "docker-compose -f docker-compose.prod.yml build",
    "logs": "docker-compose logs -f",
    "logs:gateway": "docker-compose logs -f api-gateway",
    "logs:auth": "docker-compose logs -f auth-service",
    "logs:user": "docker-compose logs -f user-service",
    "logs:config": "docker-compose logs -f config-service",
    "clean": "docker-compose down -v",
    "clean:prod": "docker-compose -f docker-compose.prod.yml down -v",
    "dev:gateway": "cd services/api-gateway && npm run dev",
    "dev:auth": "cd services/auth-service && npm run dev",
    "dev:user": "cd services/user-service && npm run dev",
    "dev:config": "cd services/config-service && npm run dev",
    "install:all": "npm run install:shared && npm run install:gateway && npm run install:auth && npm run install:user && npm run install:config",
    "install:shared": "cd shared && npm install",
    "install:gateway": "cd services/api-gateway && npm install",
    "install:auth": "cd services/auth-service && npm install",
    "install:user": "cd services/user-service && npm install",
    "install:config": "cd services/config-service && npm install",
    "build:all": "npm run build:shared && npm run build:gateway && npm run build:auth && npm run build:user && npm run build:config",
    "build:shared": "cd shared && npm run build",
    "build:gateway": "cd services/api-gateway && npm run build",
    "build:auth": "cd services/auth-service && npm run build",
    "build:user": "cd services/user-service && npm run build",
    "build:config": "cd services/config-service && npm run build"
  },
  "keywords": [
    "microservices",
    "survey",
    "docker",
    "mongodb",
    "redis",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {}
}
