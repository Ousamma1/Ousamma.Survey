# Project Service Production Configuration

NODE_ENV=production
PORT=3009
LOG_LEVEL=info

# Database
MONGODB_URI=mongodb://admin:password@mongodb:27017/projects
MONGODB_DB_NAME=projects

# Cache
REDIS_HOST=redis
