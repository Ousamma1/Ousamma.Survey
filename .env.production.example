# Production Environment Configuration
# Copy this file to .env.production and update with actual values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=production
LOG_LEVEL=info

# ============================================
# Database Configuration
# ============================================
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=changeme_secure_password
MONGODB_URI=mongodb://admin:changeme_secure_password@mongodb:27017

# ============================================
# Cache Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# ============================================
# Message Queue Configuration
# ============================================
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=survey-platform
KAFKA_GROUP_ID=survey-group

# ============================================
# AI Service Configuration
# ============================================
AI_PROVIDER=openai
AI_API_URL=https://api.openai.com/v1
AI_MODEL=gpt-4
AI_API_KEY=your_openai_api_key_here

# ============================================
# Security Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_min_32_characters_long
JWT_EXPIRY=24h
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# ============================================
# Email Configuration
# ============================================
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@survey-platform.com

# ============================================
# SMS Configuration
# ============================================
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# Push Notification Configuration
# ============================================
PUSH_PROVIDER=fcm
FCM_SERVER_KEY=your_fcm_server_key
FCM_SENDER_ID=your_fcm_sender_id

# ============================================
# CORS Configuration
# ============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Monitoring & Logging
# ============================================
SENTRY_DSN=
LOGGING_SERVICE=console
LOG_FORMAT=json

# ============================================
# Backup Configuration
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# ============================================
# Feature Flags
# ============================================
FEATURE_AI_ENABLED=true
FEATURE_GEOLOCATION_ENABLED=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_NOTIFICATIONS_ENABLED=true
