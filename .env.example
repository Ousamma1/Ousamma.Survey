# Server Configuration
PORT=3000

# AI Configuration
AI_PROVIDER=openai
AI_API_URL=https://ousammai.onrender.com/api/ai
AI_API_KEY=
AI_MODEL=gpt-4

# Optional: If using different AI providers
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_API_KEY=your_google_key

# Notification Service Configuration
# Email Configuration (SMTP)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@survey-platform.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
SMS_PROVIDER=console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Web Push)
PUSH_PROVIDER=console
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@survey-platform.com

# Push Notifications (FCM for mobile)
FCM_SERVER_KEY=your-fcm-server-key

# WebSocket Service
WEBSOCKET_URL=http://websocket-service:3002

# Notification Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/notifications
MONGODB_DB_NAME=notifications

# Kafka Configuration
KAFKA_BROKERS=kafka:9092
