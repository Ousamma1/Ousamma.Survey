# Server Configuration
PORT=3000

# AI Configuration
AI_PROVIDER=openai
AI_API_URL=https://ousammai.onrender.com/api/ai
AI_API_KEY=
AI_MODEL=gpt-4

# Optional: If using different AI providers
# OPENAI_API_KEY=your_openai_key
# ANTHROPIC_API_KEY=your_anthropic_key
# GOOGLE_API_KEY=your_google_key

# Notification Service Configuration
# Email Configuration (SMTP)
EMAIL_PROVIDER=console
EMAIL_FROM=noreply@survey-platform.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SMS Configuration (Twilio)
SMS_PROVIDER=console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_NUMBER=+1234567890

# Push Notifications (Web Push)
PUSH_PROVIDER=console
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:admin@survey-platform.com

# Push Notifications (FCM for mobile)
FCM_SERVER_KEY=your-fcm-server-key

# WebSocket Service
WEBSOCKET_URL=http://websocket-service:3002

# Notification Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# MongoDB Configuration
MONGODB_URI=mongodb://mongodb:27017/notifications
MONGODB_DB_NAME=notifications

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# ============================================
# SECURITY CONFIGURATION - SPRINT 18
# ============================================

# JWT Configuration
JWT_SECRET=change-this-to-a-secure-random-secret-min-32-chars
JWT_REFRESH_SECRET=change-this-to-a-different-secure-random-secret-min-32-chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Configuration
ENCRYPTION_KEY=change-this-to-a-secure-random-key-in-production-min-32-chars

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173
NODE_ENV=development

# Rate Limiting (Redis)
REDIS_URL=redis://redis:6379

# File Upload Configuration
UPLOAD_PATH=./uploads
VIRUS_SCAN_ENABLED=false
DELETE_ORIGINAL_AFTER_ENCRYPTION=false

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_MAX_LENGTH=128

# 2FA Configuration
TWO_FACTOR_ENABLED=true

# IP Control
IP_WHITELIST_ENABLED=false
IP_WHITELIST=
IP_BLACKLIST=
BLOCK_VPN=false
BLOCK_TOR=false

# Security Monitoring
SECURITY_WEBHOOK_URL=
SECURITY_ALERT_EMAIL=

# Service-to-Service Security
REQUIRE_MTLS=false

# Audit & Compliance
AUDIT_LOG_LEVEL=info

# GDPR Configuration (automatically enforced)
# Data retention: 2 years
# Inactive account deletion: 3 years
