# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Service URLs
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
CONFIG_SERVICE_URL=http://config-service:3003
SURVEY_SERVICE_URL=http://survey-service:3004
RESPONSE_SERVICE_URL=http://response-service:3005
ANALYTICS_SERVICE_URL=http://analytics-service:3006
AI_SERVICE_URL=http://ai-service:3007
GEOLOCATION_SERVICE_URL=http://geolocation-service:3008
NOTIFICATION_SERVICE_URL=http://notification-service:3009
FILE_SERVICE_URL=http://file-service:3010

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
